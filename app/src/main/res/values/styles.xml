<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppTheme.CardViewTheme" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextTheme" parent="AppTheme">
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>
    </style>

</resources>
